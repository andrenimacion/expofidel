/* #region animaciones */

@keyframes animEntrada {
    0% {
        opacity: 0;
        transform: translateX(0px);
    }
    10% {
        transform: translateX(-15px);
    }
    100% {
        opacity: 1;
        transform: translateX(150px);
    }
}

